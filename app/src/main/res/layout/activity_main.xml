<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    This is the button attribute to setup the card flip after being clicked.-->

    <Button
        android:id="@+id/flip_click"
        android:layout_width="106dp"
        android:layout_height="58dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="496dp"
        android:text="@string/flip_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    This an ImageView attribute to import the front image of the card.-->
    <ImageView
        android:id="@+id/image_front"
        android:layout_width="377dp"
        android:layout_height="287dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/front_card" />
</androidx.constraintlayout.widget.ConstraintLayout>